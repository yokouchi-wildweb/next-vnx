{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/features/user/*": ["./src/features/core/user/*"],
      "@/features/wallet/*": ["./src/features/core/wallet/*"],
      "@/features/walletHistory/*": ["./src/features/core/walletHistory/*"],
      "@/features/purchaseRequest/*": ["./src/features/core/purchaseRequest/*"],
      "@/features/setting/*": ["./src/features/core/setting/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/_stash",
    "src/features/_template",
    "src/app/admin/_template",
    "TODO.md"
  ]
}
